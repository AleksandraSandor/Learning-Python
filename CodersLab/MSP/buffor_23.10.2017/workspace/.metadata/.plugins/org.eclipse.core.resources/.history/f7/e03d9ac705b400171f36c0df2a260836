from mysql.connector import connect, cursor
from mysql.connector.errors import ProgrammingError
from mysql.connector.errors import InterfaceError
        
        
sql_create_db = "create database exercise_db;";# <----


def connect_to_db(db_name):
    username = "root"
    passwd = "coderslab"
    hostname = "127.0.0.1"
    #db_name = "exercises_db"
    
    try: 
        cnx = connect(user = username, password = passwd, host = hostname, database = db_name)
        cursor = cnx.cursor()
        cursor.executable(sql_create_db)
        cursor.close()
        cnx.close()
        print("Połączenie gotowe")
        
        
    except ProgrammingError:
        print("Nieudane połączenie")
    except InterfaceError:
        print("Zła nazwa hosta")    
    return(cnx)


