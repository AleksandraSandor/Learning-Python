#===============================================================================
#             R8.3 Zwierzak z właściwością 
#===============================================================================
class Critter(object):
    def __init__(self, name):
        print("Urodził się zierzak")
        self.__name = name
        
    @property
    def name(self):
        return self.__name
    
zwierz1 = Critter("pucek")
zwierz1.name()



