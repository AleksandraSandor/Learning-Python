SHOW DATABASES;
CREATE DATABASE TEST;
USE TEST;
SHOW TABLES;
CREATE TABLE person(
    -> id int NOT NULL, 
    -> name char(100) NOT NULL,
    -> surname varchar(255) not null,
    -> email varchar(255) null, 
    -> PRIMARY KEY(id));
drop table library_user;
drop database nazwa_db;
describe library_user;


